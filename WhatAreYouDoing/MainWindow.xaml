<Window x:Class="WhatAreYouDoing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:whatAreYouDoing="clr-namespace:WhatAreYouDoing"
        xmlns:persistance="clr-namespace:WhatAreYouDoing.Persistance"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding Value}" KeyUp="UIElement_OnKeyUp" Name="TextBox" />
        <DataGrid Grid.Row="1"  ItemsSource="{Binding Entries}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="I was doing..." Binding="{Binding Value}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="150" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        

    </Grid>
</Window>